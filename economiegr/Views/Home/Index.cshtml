      $('.annotate-learning-object').show();
    }
  });


  function fade(element, duration) {
    var start = new Date;
    (function next() {
      var time = new Date - start;
      if (time < duration) {
        box.style.opacity = 1 - time / duration;
        requestAnimationFrame(next);
      } else {
        box.style.opacity = '0';
      }
    })();
  }

</script>
